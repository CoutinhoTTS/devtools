{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2023","DOM"],
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedDeclarations": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts","packages/**/*.vue","scripts/*.ts"],
}